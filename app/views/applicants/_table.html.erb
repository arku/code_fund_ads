<div class="table-responsive">
  <table class="table table-borderless u-datatable u-datatable__striped">
    <thead>
      <tr class="border-bottom">
        <%= sortable_tr "created_at", "Date" %>
        <%= sortable_tr "role" %>
        <%= sortable_tr "first_name", "Name" %>
        <%= sortable_tr "email" %>
        <th scope="col">Website</th>
        <%= sortable_tr "status" %>
      </tr>
    </thead>
    <tbody class="font-size-1">
      <%= render partial: "/applicants/tr", collection: applicants, as: :applicant %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
    <span><%== pagy_nav_bootstrap(pagy) if pagy.pages > 1 %></span>
    <%= pagy_entries(pagy) %>
  </div>
</div>
